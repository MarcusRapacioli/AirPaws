<div class="profile-container">

  <ul class="nav nav-tabs"">
    <li class="active"><a href="#bookings" data-toggle="tab">My Bookings</a></li>
    <li><a href="#puppies" data-toggle="tab">My puppies</a></li>
  </ul>

  <div class="tab-content">
    <div class="tab-pane" id="bookings">
      <div class="booking-title">
        <h2>Your Pup Bookings</h2>
      </div>
      <% @bookings.each do |booking| %>
        <div class="list-row">
          <div class="row-avatar">
            <img src="<%= booking.puppy.photo %>" class="img-circle list-avatar">
          </div>
          <div class="row-name-breed">
            <h3><%= booking.puppy.name.capitalize %></h3>
            <p><%= booking.puppy.breed.capitalize %></p>
          </div>
          <div class="row-dates">
            <p><%= booking.pick_up %> - <%= booking.drop_off %></p>
          </div>
          <div class="row-location">
            <p><%= booking.puppy.location.capitalize %></p>
          </div>
          <div class="row-price">
            <p>Â£<%= booking.puppy.price %></p>
          </div>
        </div>
      <% end %>
    </div>
    <div class="tab-pane" id="puppies">
      <div>
        <h2>My Puppies</h2>

<div class="container-index">
         <div class="row">
          <% current_user.owned_puppies.each do |puppy| %>
            <div class="col-xs-12 col-sm-6 col-md-4 space">
              <%= link_to puppy_path(puppy) do %>
              <div class="card" style="background-image: url(<%= puppy.photo %>)">
                  <div class="card-category"><%=puppy.name%>
                  </div>
                  <div class="card-description">
                    <h2><%= puppy.owner.first_name.capitalize %></h2>
                    <p><%= puppy.age %> month old <%= puppy.breed %> for $<%= puppy.price %></p>
                  </div>
              </div>
            <% end %>
          </div>
      <% end %>
    </div>
      </div>
    </div>
  </div>
